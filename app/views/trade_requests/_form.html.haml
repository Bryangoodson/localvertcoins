= form_for @trade_request do |f|
  - if @trade_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trade_request.errors.count, "error")} prohibited this trade_request from being saved:"
      %ul
        - @trade_request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
