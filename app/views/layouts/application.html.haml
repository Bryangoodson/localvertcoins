!!! 5
%html
  %head
    %title Dashous
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .header
      .logo
        = link_to 'DASHOUS', root_path
      .top-nav
        .search
          %input(type="text" name="query" placeholder="Search")
          .search-button
            .fa.fa-search.fa-lg
    .nav
      - if current_user
        %a.item
          .fa.fa-handshake-o.fa-lg
          Offers
        %a.item
          .fa.fa-street-view.fa-lg
          Trade Requests
        %a.item
          .fa.fa-user-circle-o.fa-lg
          Account
        = link_to destroy_user_session_path, method: 'DELETE', class: 'item' do
          .fa.fa-sign-out.fa-lg
          Logout
      - else
        = link_to new_user_session_path, class: 'item' do
          .fa.fa-sign-in.fa-lg
          Login
        = link_to new_user_registration_path, class: 'item' do
          .fa.fa-user-plus.fa-lg
          Sign Up

    .content
      = yield
